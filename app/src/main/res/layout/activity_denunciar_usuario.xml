<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/OrangeApp"
        android:gravity="center" >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/denunciarToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>
    </RelativeLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="denunciarUsuario"
                android:orientation="vertical"
                android:background="@drawable/backgroun_button_orange">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="denunciar" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Scrollable Item below header and above footer -->
    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:background="@color/white"
        android:layout_below="@id/header" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textoFormulario"
                        android:textColor="@color/OrangeApp"
                        android:textAlignment="center"
                        android:text="@string/txtDenunciar1"/>

                </LinearLayout>

            </LinearLayout>

            <!--tipo, motivo, data, hora-->

            <LinearLayout style="@style/layoutLinha"
                android:layout_margin="10dp">

                <TextView
                    style="@style/textoFormulario"
                    android:text="@string/tipoDenuncia" />
            </LinearLayout>

            <LinearLayout
                style="@style/layoutLinha"
                android:layout_margin="10dp">

                <RadioGroup
                    android:id="@+id/radioGroupDenuncia"
                    style="@style/radioGroupFormulario"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioMausTratos"
                        android:text="@string/denuncia_maus_tratos"
                        android:checked="true"
                        style="@style/radioButtonFormulario"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/radioImproprio"
                        android:text="@string/denuncia_conteudo_improprio"
                        style="@style/radioButtonFormulario"
                        android:layout_weight="1"/>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout style="@style/layoutLinha"
                android:layout_margin="10dp">
                <TextView
                    style="@style/textoFormulario"
                    android:text="@string/motivoDenuncia"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layoutLinha">
                <LinearLayout style="@style/colunaComCheckbox"
                    android:layout_margin="10dp">
                    <EditText
                        android:id="@+id/edMotivoDenuncia"
                        style="@style/inputFormularioPet"
                        android:hint="@string/motivo_denuncia_placeholder"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textoFormulario"
                        android:textColor="@color/OrangeApp"
                        android:textAlignment="center"
                        android:text="@string/denunciar2"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>