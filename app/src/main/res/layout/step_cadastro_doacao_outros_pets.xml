<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/OrangeApp"
        />

    <!--vc teve petsx-->
    <LinearLayout style="@style/layoutLinha">
        <TextView
            style="@style/textoFormulario"
            android:textAlignment="center"
            android:text="@string/temOutroPet"/>
    </LinearLayout>
    <LinearLayout style="@style/layoutLinha">

        <LinearLayout style="@style/colunasFormulario">

            <RadioButton android:id="@+id/rbTevePetsSIM"
                android:text="@string/sim"
                style="@style/checkBoxFormulario"
                android:layout_weight="2"
                android:onClick="onRBTevePetsClicked"/>

            <RadioButton android:id="@+id/rbTevePetsNAO"
                android:text="@string/nao"
                style="@style/checkBoxFormulario"
                android:layout_weight="2"
                android:onClick="onRBTevePetsClicked"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>