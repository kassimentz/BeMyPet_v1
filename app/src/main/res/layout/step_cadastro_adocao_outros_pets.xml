    <LinearLayout style="@style/layoutLinha">

        <TextView
            style="@style/textoFormulario"
            android:text="@string/txtTeveOutroPet" />
    </LinearLayout>

    <LinearLayout style="@style/layoutLinha">

        <RadioGroup
            android:id="@+id/radioGroupTevePet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbTevePetsSIM"
                style="@style/checkBoxFormulario"
                android:layout_weight="2"
                android:text="@string/sim" />

            <RadioButton
                android:id="@+id/rbTevePetsNAO"
                style="@style/checkBoxFormulario"
                android:text="@string/nao"
                android:checked="true"/>
        </RadioGroup>
    </LinearLayout>

