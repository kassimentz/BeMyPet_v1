            android:id="@+id/btMenosTeve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="diminueQuantidaTevePet"
            android:src="@drawable/remove_number"/>
        <EditText
            android:id="@+id/txtTevePets"
            android:layout_width="30dp"
            android:background="@drawable/edit_rounded_corners"
            style="@style/inputFormularioPet"
            android:layout_gravity="fill"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btMaisTeve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="somaQuantidadeTevePet"
            android:src="@drawable/add_photo"/>
    </LinearLayout>

