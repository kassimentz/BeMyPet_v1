<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PerfilPetActivity"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical" >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/visualizarPetToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_adocao" />

                <ImageButton
                    android:id="@+id/user_profile_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-60dp"
                    android:background="@drawable/cat_profile"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_cover_image"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:paddingBottom="10dp">


                    <ImageView
                        android:id="@+id/add_friend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/fav2_v" />


                    <TextView
                        android:id="@+id/user_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="70dp"
                        android:text="BASKARA"
                        android:textColor="@color/OrangeApp"
                        android:textSize="24sp"
                        android:textStyle="normal" />

                </RelativeLayout>

            </RelativeLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <!--campos para especie e sexo-->
                    <LinearLayout style="@style/layoutLinha">

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/especieTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/especiePerfilPet"
                                android:text="@string/especieTitulo"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/sexoTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/sexoPerfilPet"
                                android:text="@string/sexoTitulo"/>

                        </LinearLayout>
                    </LinearLayout>

                    <!--campos para raÃ§a e idade-->
                    <LinearLayout style="@style/layoutLinha">

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/racaTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/racaPerfilPet"
                                android:text="@string/racaTitulo"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/idadeTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/idadePerfilPet"
                                android:text="@string/idadeTitulo"/>

                        </LinearLayout>
                    </LinearLayout>

                    <!--campos para peso-->
                    <LinearLayout style="@style/layoutLinha">

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/pesoTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/pesoPerfilPet"
                                android:text="@string/pesoTitulo"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!--campos para castrado e vermifugado-->
                    <LinearLayout style="@style/layoutLinha">

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/castradoTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/castradoPerfilPet"
                                android:text="@string/castradoTitulo"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/vermifugadoTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/vermifugadoPerfilPet"
                                android:text="@string/vermifugadoTitulo"/>

                        </LinearLayout>
                    </LinearLayout>

                    <!--campos para socialvel e temperamento-->
                    <LinearLayout style="@style/layoutLinha">

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/sociavelTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/socialvelPessoalPerfilPet"
                                android:text="@string/sociavelPessoas"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/socialvelCaesPerfilPet"
                                android:text="@string/sociavelCaes"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/socialvelGatosPerfilPet"
                                android:text="@string/sociavelGatos"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/labelPerfil"
                                android:text="@string/temperamentoTitulo"/>

                            <TextView
                                style="@style/textoPerfil"
                                android:id="@+id/temperamentoPerfilPet"
                                android:text="@string/temperamentoMuitoDocil"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

        </ScrollView>


        </LinearLayout>
</LinearLayout>