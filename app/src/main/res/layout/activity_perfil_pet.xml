                        <TextView
                            android:id="@+id/temperamentoPerfilPet"
                            style="@style/textoPerfil"
                            android:text="@string/temperamentoMuitoDocil" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/layoutLinha">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtOutrasInformacoes" />
                </LinearLayout>

                <LinearLayout
                    style="@style/layoutLinha"
                    android:orientation="vertical">

                    <Button
