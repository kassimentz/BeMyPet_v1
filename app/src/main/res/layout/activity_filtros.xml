<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".FiltrosActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical" >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/filtrosToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <!--campos para especie-->
                <LinearLayout style="@style/layoutLinha">

                    <LinearLayout style="@style/colunasTituloFormulario">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/especieTitulo"/>

                    </LinearLayout>

                    <LinearLayout style="@style/colunasFormulario">

                        <CheckBox android:id="@+id/chk_especie_cao"
                            android:text="@string/cao"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                        <CheckBox android:id="@+id/chk_especie_gato"
                            android:text="@string/gato"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                        <CheckBox android:id="@+id/chk_especie_outros"
                            android:text="@string/outros"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

                <!--campos para sexo-->
                <LinearLayout
                    style="@style/layoutLinha">>

                    <LinearLayout style="@style/colunasTituloFormulario">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/sexoTitulo"/>

                    </LinearLayout>

                    <LinearLayout style="@style/colunasFormulario">

                        <CheckBox android:id="@+id/chk_sexo_macho"
                            android:text="@string/macho"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="2"/>

                        <CheckBox android:id="@+id/chk_sexo_femea"
                            android:text="@string/femea"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

                <!--campos para raÃ§a-->
                <LinearLayout style="@style/layoutLinha">

                    <LinearLayout style="@style/colunasTituloFormulario">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/racaTitulo"/>

                    </LinearLayout>

                    <LinearLayout style="@style/colunasFormularioSpinner">

                        <bemypet.com.br.bemypet_v1.utils.MultiSpinner
                            style="@style/spinnerFormulario"
                            android:id="@+id/spinnerRacas"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <!--campos para idade-->
                <LinearLayout style="@style/layoutLinha">

                    <LinearLayout style="@style/colunasTituloFormulario">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/idadeTitulo"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="4">

                        <TextView
                            android:layout_weight="1"
                            style="@style/textoOrange"
                            android:layout_width="50dp"
                            android:id="@+id/edtIdadeMinima"
                            android:text="0"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/showIdadeMinimaDialog"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/dropdown"
                            android:layout_gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_weight="1"
                            style="@style/textoOrange"
                            android:layout_width="50dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/edtIdadeMaxima"
                            android:text="100"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/showIdadeMaximaDialog"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/dropdown"
                            android:layout_gravity="center"
                            android:layout_weight="1"/>



                    </LinearLayout>

                </LinearLayout>

                <!--campos para peso-->
                <LinearLayout style="@style/layoutLinha">

                    <LinearLayout style="@style/colunasTituloFormulario">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/pesoTitulo"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="4">

                        <TextView
                            android:layout_weight="1"
                            style="@style/textoOrange"
                            android:layout_width="50dp"
                            android:id="@+id/edtPesoMinimo"
                            android:text="0"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/showPesoMinimoDialog"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/dropdown"
                            android:layout_gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_weight="1"
                            style="@style/textoOrange"
                            android:layout_width="50dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/edtPesoMaximo"
                            android:text="100"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/showPesoMaximoDialog"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/dropdown"
                            android:layout_gravity="center"
                            android:layout_weight="1"/>



                    </LinearLayout>

                </LinearLayout>

                <!--campos para castrado-->
                <LinearLayout style="@style/layoutLinha">

                    <LinearLayout style="@style/colunasTituloFormulario">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/castradoTitulo"/>

                    </LinearLayout>

                    <LinearLayout style="@style/colunasFormulario">

                        <CheckBox android:id="@+id/chk_castrado_sim"
                            android:text="@string/sim"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="2"/>

                        <CheckBox android:id="@+id/chk_castrado_nao"
                            android:text="@string/nao"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

                <!--campos para vermifugado-->
                <LinearLayout style="@style/layoutLinha">

                    <LinearLayout style="@style/colunasTituloFormulario">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/vermifugadoTitulo"/>

                    </LinearLayout>

                    <LinearLayout style="@style/colunasFormulario">

                        <CheckBox android:id="@+id/chk_vermifugado_sim"
                            android:text="@string/sim"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="2"/>

                        <CheckBox android:id="@+id/chk_vermifugado_nao"
                            android:text="@string/nao"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>


                    </LinearLayout>

                </LinearLayout>

                <!--campos para sociavel e temperamento-->
                <LinearLayout style="@style/layoutLinha">

                    <LinearLayout style="@style/colunaComCheckbox">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/sociavelTitulo"/>

                        <CheckBox android:id="@+id/chk_sociavel_pessoas"
                            android:text="@string/sociavelPessoas"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                        <CheckBox android:id="@+id/chk_sociavel_caes"
                            android:text="@string/sociavelCaes"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                        <CheckBox android:id="@+id/chk_sociavel_gatos"
                            android:text="@string/sociavelGatos"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                        <CheckBox android:id="@+id/chk_sociavel_outros"
                            android:text="@string/outros"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/colunaComCheckbox">

                        <TextView
                            style="@style/textoFormulario"
                            android:text="@string/temperamentoTitulo"/>

                        <CheckBox android:id="@+id/chk_temperamento_bravo"
                            style="@style/checkBoxFormulario"
                            android:text="@string/temperamentoBravo"
                            android:layout_weight="1"/>

                        <CheckBox android:id="@+id/chk_temperamento_cuidado"
                            style="@style/checkBoxFormulario"
                            android:text="@string/temperamentoComCuidado"
                            android:layout_weight="1"/>

                        <CheckBox android:id="@+id/chk_temperamento_convive"
                            android:text="@string/temperamentoConviveBem"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                        <CheckBox android:id="@+id/chk_temperamento_docil"
                            android:text="@string/temperamentoMuitoDocil"
                            style="@style/checkBoxFormulario"
                            android:layout_weight="1"/>

                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/OrangeApp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout style="@style/layoutLinha">

                    <LinearLayout style="@style/colunasTituloFormulario">

                        <TextView
                            style="@style/textoFormulario"
                            android:textAlignment="center"
                            android:text="@string/raioDeBuscaTitulo"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:layout_gravity="center">

                        <SeekBar
                            android:id="@+id/seekBarRaioBusca"
                            android:max="100"
                            style="@style/seekBar"/>

                        <TextView
                            android:id="@+id/txtSeekBarRaioBuscaValue"
                            android:text="@string/raioDeBusca"
                            android:layout_below="@+id/seekBarRaioBusca"
                            style="@style/txtSeekBar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</LinearLayout>

