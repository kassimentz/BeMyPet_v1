<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".FiltrosActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical" >

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/filtrosToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </android.support.design.widget.AppBarLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <!--campos para especie-->
                    <LinearLayout
                        style="@style/layoutLinha">
                        android:weightSum="4">

                        <LinearLayout style="@style/colunasTituloFormulario">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="ESPÉCIE"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunasFormulario">

                            <CheckBox android:id="@+id/chk_cao"
                                android:text="Cão"
                                style="@style/checkBoxOn"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                            <CheckBox android:id="@+id/chk_gato"
                                android:text="Gato"
                                style="@style/checkBoxOff"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                            <CheckBox android:id="@+id/chk_outros"
                                android:text="Outros"
                                style="@style/checkBoxOff"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>


                        </LinearLayout>

                    </LinearLayout>

                    <!--campos para sexo-->
                    <LinearLayout
                        style="@style/layoutLinha">>

                        <LinearLayout style="@style/colunasTituloFormulario">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="SEXO"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunasFormulario">

                            <CheckBox android:id="@+id/chk_macho"
                                android:text="Macho"
                                style="@style/checkBoxOn"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="2"/>

                            <CheckBox android:id="@+id/chk_femea"
                                android:text="Fêmea"
                                style="@style/checkBoxOff"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>



                        </LinearLayout>

                    </LinearLayout>

                    <!--campos para raça-->
                    <LinearLayout
                        style="@style/layoutLinha">>

                        <LinearLayout style="@style/colunasTituloFormulario">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="RAÇA"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunasFormulario">>

                            <Spinner
                                android:id="@+id/drp_racas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/raca_array"
                                android:prompt="@string/raca_prompt" />


                        </LinearLayout>

                    </LinearLayout>

                    <!--campos para idade-->
                    <LinearLayout
                        style="@style/layoutLinha">>

                        <LinearLayout style="@style/colunasTituloFormulario">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="IDADE"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunasFormulario">

                            <SeekBar
                                android:id="@+id/seekBarIdade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="20"
                                android:secondaryProgress="20" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--campos para peso-->
                    <LinearLayout
                        style="@style/layoutLinha">>

                        <LinearLayout style="@style/colunasTituloFormulario">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="PESO"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunasFormulario">

                            <SeekBar
                                android:id="@+id/seekBarPeso"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="20"
                                android:secondaryProgress="20" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--campos para castrado-->
                    <LinearLayout
                        style="@style/layoutLinha">>

                        <LinearLayout style="@style/colunasTituloFormulario">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="CASTRADO"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunasFormulario">

                            <CheckBox android:id="@+id/chk_castrado"
                                android:text="Sim"
                                style="@style/checkBoxOn"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="2"/>

                            <CheckBox android:id="@+id/chk_nao_castrado"
                                android:text="Não"
                                style="@style/checkBoxOff"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>


                        </LinearLayout>

                    </LinearLayout>

                    <!--campos para vermifugado-->
                    <LinearLayout
                        style="@style/layoutLinha">>

                        <LinearLayout style="@style/colunasTituloFormulario">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="VERMIFUGADO"/>

                        </LinearLayout>

                        <LinearLayout style="@style/colunasFormulario">

                            <CheckBox android:id="@+id/chk_vermifugado"
                                android:text="Sim"
                                style="@style/checkBoxOn"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="2"/>

                            <CheckBox android:id="@+id/chk_nao_vermifugado"
                                android:text="Não"
                                style="@style/checkBoxOff"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>


                        </LinearLayout>

                    </LinearLayout>

                    <!--campos para sociavel e temperamento-->
                    <LinearLayout
                        style="@style/layoutLinha">

                        <LinearLayout style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="SOCIÁVEL"/>

                            <CheckBox android:id="@+id/chk_sociavel_pessoas"
                                android:text="Pessoas"
                                style="@style/checkBoxOn"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                            <CheckBox android:id="@+id/chk_sociavel_caes"
                                android:text="Cães"
                                style="@style/checkBoxOff"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                            <CheckBox android:id="@+id/chk_sociavel_gatos"
                                android:text="Gatos"
                                style="@style/checkBoxOn"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                            <CheckBox android:id="@+id/chk_sociavel_outros"
                                android:text="Outros"
                                style="@style/checkBoxOff"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/colunaComCheckbox">

                            <TextView
                                style="@style/textoFormulario"
                                android:text="TEMPERAMENTO"/>

                            <CheckBox android:id="@+id/chk_temperamento_bravo"
                                style="@style/checkBoxOff"
                                android:text="Bravo"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                            <CheckBox android:id="@+id/chk_temperamento_cuidado"
                                style="@style/checkBoxOff"
                                android:text="Com cuidado"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                            <CheckBox android:id="@+id/chk_temperamento_convive"
                                android:text="Convive Bem"
                                style="@style/checkBoxOn"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                            <CheckBox android:id="@+id/chk_temperamento_docil"
                                android:text="Muito dócil"
                                style="@style/checkBoxOn"
                                android:onClick="onCheckboxClicked"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>
</LinearLayout>


