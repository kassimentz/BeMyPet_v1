<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:layout_gravity="center"
    android:paddingTop="5dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/listImgPet"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:background="@drawable/bg_circle"
        android:src="@drawable/cat_profile"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNomePet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textoParagrafo"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Nome do pet" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/YellowText" />

        <TextView
            android:id="@+id/txtDadosPet"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            style="@style/textoParagrafo"
            android:text="Espécie (raça), sexo, idade" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingLeft="25dp"
        android:src="@drawable/right"/>

</LinearLayout>